{
  "name": "Spoke",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Easily add knowledge base entries to Spoke",
  "browser_action": {
    "default_title": "Add to Spoke",
    "default_popup": "lib/popup.html"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "incognito": "spanning",
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "*://*.askspoke-staging.com/*",
    "*://*.askspoke-local.com/*",
    "*://*.askspoke.com/*",
    "*://go/*",
    "clipboardRead",
    "clipboardWrite",
    "notifications"
  ]
}
